<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contacts_dialog_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contacts_dialog_edit_name"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/contacts_dialog_edit_name"/>

    <EditText
        android:id="@+id/contacts_dialog_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/contacts_dialog_text_name"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"/>

    <EditText
        android:id="@+id/contacts_dialog_edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="@+id/contacts_dialog_text_phone"
        app:layout_constraintTop_toTopOf="@+id/contacts_dialog_text_phone"
        app:layout_constraintRight_toRightOf="@+id/contacts_dialog_edit_name"/>

    <TextView
        android:id="@+id/contacts_dialog_text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/contacts_dialog_text_name"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/contacts_dialog_edit_name"
        />
</android.support.constraint.ConstraintLayout>