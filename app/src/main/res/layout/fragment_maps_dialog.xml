<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_maps_dialog_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/fragment_maps_dialog_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_maps_dialog_text_title"
        app:layout_constraintLeft_toRightOf="@+id/fragment_maps_dialog_text_title"
        app:layout_constraintTop_toTopOf="@+id/fragment_maps_dialog_text_title"
        app:layout_constraintVertical_bias="0.72"
        tools:ignore="RtlHardcoded"/>

    <TextView
        android:id="@+id/fragment_maps_dialog_text_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Snippet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_maps_dialog_text_title"/>

    <EditText
        android:id="@+id/fragment_maps_dialog_edit_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_maps_dialog_text_snippet"
        app:layout_constraintRight_toRightOf="@+id/fragment_maps_dialog_edit_title"
        app:layout_constraintTop_toTopOf="@+id/fragment_maps_dialog_text_snippet"/>
</android.support.constraint.ConstraintLayout>