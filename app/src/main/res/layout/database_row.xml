<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/database_row_text_id"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/database_row_text_name"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/database_row_text_id"
        app:layout_constraintLeft_toRightOf="@+id/database_row_text_id"
        app:layout_constraintTop_toTopOf="@+id/database_row_text_id"
        app:layout_constraintVertical_bias="0.44"
        />

    <TextView
        android:id="@+id/database_row_text_country"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/database_row_text_name"
        app:layout_constraintLeft_toRightOf="@+id/database_row_text_name"
        app:layout_constraintTop_toTopOf="@+id/database_row_text_name"
        app:layout_constraintVertical_bias="0.51"/>

    <TextView
        android:id="@+id/database_row_text_price"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/database_row_text_country"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/database_row_text_country"
        app:layout_constraintBottom_toBottomOf="@+id/database_row_text_country"
        app:layout_constraintHorizontal_bias="0.37"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.48000002"/>

</android.support.constraint.ConstraintLayout>