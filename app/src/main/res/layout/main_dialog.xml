<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_dialog_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_dialog_edit_name"
        app:layout_constraintBottom_toBottomOf="@+id/main_dialog_edit_name"
        app:layout_constraintVertical_bias="0.5"/>

    <EditText
        android:id="@+id/main_dialog_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/main_dialog_text_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/main_dialog_text_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/main_dialog_text_name"/>

    <EditText
        android:id="@+id/main_dialog_edit_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/main_dialog_text_country"
        android:layout_marginStart="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_dialog_text_country"
        app:layout_constraintTop_toTopOf="@+id/main_dialog_text_country"
        app:layout_constraintVertical_bias="0.52"/>

    <TextView
        android:id="@+id/main_dialog_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/main_dialog_text_country"/>

    <EditText
        android:id="@+id/main_dialog_edit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/main_dialog_text_price"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_dialog_text_price"
        app:layout_constraintTop_toTopOf="@+id/main_dialog_text_price"
        app:layout_constraintVertical_bias="0.56"/>
</android.support.constraint.ConstraintLayout>