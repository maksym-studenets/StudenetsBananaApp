<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_dialog_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/dialog_name_text"
        app:layout_constraintBottom_toBottomOf="@+id/main_dialog_edit_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_dialog_edit_name"
        />

    <EditText
        android:id="@+id/main_dialog_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textCapSentences|textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/main_dialog_text_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/main_dialog_text_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:text="@string/dialog_country_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_dialog_text_name"/>

    <EditText
        android:id="@+id/main_dialog_edit_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:ems="10"
        android:inputType="textCapSentences|textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/main_dialog_text_country"
        app:layout_constraintLeft_toLeftOf="@+id/main_dialog_edit_name"
        app:layout_constraintTop_toTopOf="@+id/main_dialog_text_country"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/main_dialog_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/dialog_price_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_dialog_text_country"/>

    <EditText
        android:id="@+id/main_dialog_edit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/main_dialog_text_price"
        app:layout_constraintTop_toTopOf="@+id/main_dialog_text_price"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/main_dialog_edit_country"/>
</android.support.constraint.ConstraintLayout>